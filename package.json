{
  "name": "nwjs-with-cra",
  "main": "./build/main.js",
  "version": "0.2.0",
  "private": true,
  "homepage": ".",
  "node-remote": "http://localhost:3000",
  "chromium-args": "--disable-features=nw2",
  "build": {
    "nwVersion": "0.42.6",
    "files": [
      "build/**",
      "package.json"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "nwjs-reactbuild": "nw .",
    "prenwjs-reactbuild": "npm run build",
    "nwjs-pack": "build --tasks win-x86,win-x64,linux-x86,linux-x64,mac-x64 --mirror https://dl.nwjs.io/ .",
    "prenwjs-pack": "npm run build",
    "nwjs-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && cross-env NWJS_START_URL=http://localhost:3000 nw --load-extension=extensions/react-devtools/ .\" "
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "Chrome >= 78",
    "node >= 13.1.0"
  ],
  "devDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.2.0",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "nw": "^0.42.6-sdk",
    "nwjs-builder-phoenix": "^1.15.0",
    "wait-on": "^3.3.0"
  }
}
